<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
  <% end %>
  <% if @podcasts.any? %>
    <%= will_paginate @podcasts %>

    <%= render :partial => "sortable_list" %>

    <%= will_paginate @podcasts %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('shared.admin.search.no_results') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Admin::PodcastsController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_podcasts_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), new_admin_podcast_url,
                   :class => "add_icon" %>
    </li>
  <% if !searching? and Podcast.count > 1 and Admin::PodcastsController.sortable? %>
    <li>
      <%= link_to t('.reorder', :what => "podcasts"),
                   admin_podcasts_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "podcasts"),
                   admin_podcasts_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<%= render :partial => "/shared/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Podcast.count > 1 %>

<p>
  <strong>
    NOTE: Please update Refinery Settings prefixed with podcast to properly build your podcast feed.
  </strong>
</p>
